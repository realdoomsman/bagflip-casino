# ==========================================
# BAGFLIP CASINO - BACKEND ENVIRONMENT
# ==========================================

# Server Configuration
PORT=3001
NODE_ENV=production

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PROGRAM_ID=your_mainnet_program_id_here

# Treasury Authority (KEEP SECRET!)
# Path to keypair file or base58 private key
TREASURY_AUTHORITY_KEYPAIR=/path/to/mainnet-keypair.json

# VRF Configuration
VRF_MODE=switchboard
# VRF_MODE=simulated  # Use for testing only

# Database Configuration
DB_TYPE=postgres
DATABASE_URL=postgresql://user:password@host:5432/bagflip_casino?sslmode=require
# DB_TYPE=sqlite  # Use for development
# DB_PATH=./casino.db

# Security
ALLOWED_ORIGINS=https://bagflip.xyz,https://www.bagflip.xyz
# ALLOWED_ORIGINS=*  # Use for development only

# Switchboard VRF (if using)
SWITCHBOARD_PROGRAM_ID=SW1TCH7qEPTdLsDHRgPuMQjbQxKdH2aBStViMFnt64f
SWITCHBOARD_QUEUE=your_vrf_queue_pubkey
SWITCHBOARD_AUTHORITY=your_vrf_authority_keypair

